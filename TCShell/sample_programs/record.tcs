record Person {
  string name,
  number age,
  bool {Person, Person} isSameAge
}

var isSameAge = fn (var first:Person, var second:Person)
  return first.age == second.age

print(Person {"Alex", 18, isSameAge})

var sam = Person {"Sam", 21, isSameAge}

print(sam.name + " is " + sam.age + " years old!")

if sam.isSameAge(sam, Person {"Marc", 24, isSameAge})
  print("Wrong!")
else print("Right!")
